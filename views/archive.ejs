<%- include("partials/header.ejs") %>
<body>
    <div id="posts">
        <% posts.forEach(post => { %>
            <div class="postStyle">
                    <h3><%= post.title %></h3>
                    <p>
                        <% var shortText = post.content %>
                        <% truncShortText = shortText.substring(0, 150) %>
                        <%=truncShortText %>
                    </p>
               </div>
        <% }) %>
    </div>
</body>
